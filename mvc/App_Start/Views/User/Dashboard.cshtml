@using PagedList.Mvc;
@using PagedList;

@model NotesMarketPlace.Models.Note
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/custom/responsive-tabs.min.css")

    @Styles.Render("~/Content/custom/dashboard.css")
    @Styles.Render("~/Content/custom/responsive.css")
    @Scripts.Render("~/bundles/jquery")
}
<link href="~/Content/PagedList.css" rel="stylesheet" />


<section id="dashboard">
    <div class="content-box-md">
        <div class="container">
            <h1>Dashboard<span><button class="btn" role="button">ADD NOTE</button></span></h1>
            <div class="dashboard-blocks text-center">
                <div class="block">
                    <div class="earnings detail">
                        <img src="../images/my-earning.png">
                        <p>My Earning</p>
                    </div>

                    <div class="num-notes-sold detail">
                        <h5><a href="#">@ViewBag.Count</a></h5>
                        <p>Number of Notes Sold</p>
                    </div>
                    <div class="money-earned detail">
                        <h5><a href="#">$@ViewBag.Sum</a></h5>
                        <p>Money Earned</p>
                    </div>

                </div>
                <div class="block">
                    <div class="my-downloads">
                        <h5><a href="#">@ViewBag.MyDownloads</a></h5>
                        <p>My Downloads</p>
                    </div>
                    <div class="my-rejected-notes">
                        <h5><a href="#">@ViewBag.MyRejected</a></h5>
                        <p>My Rejected Notes</p>
                    </div>
                    <div class="buyer-requests">
                        <h5><a href="#">@ViewBag.BuyerRequest</a></h5>
                        <p>Buyer Requests</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<section id="in-progress-notes">
    <div class="content-box-md">
        <div class="container">

            <div class="row">
                <div class="col-md-5 col-sm-12 col-12">
                    <h3>In Progress Notes</h3>
                </div>
                <div class="col-md-7 col-sm-12 col-12">
                    <form class="sb">

                        <div class="form-group has-search">
                            <span class="fa fa-search form-control-feedback"></span>
                            <input class="form-control" type="text" placeholder="Search notes here.." aria-label="Search">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-secondary">Search</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ADDED DATE</th>
                            <th scope="col">TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">STATUS</th>
                            <th scope="col">ACTIONS</th>
                        </tr>
                    </thead>

                    @foreach (var note in Model.Inprogressnotes)
                    {

                        <tr>

                            <td>@note.PublishedDate</td>
                            <td><a href="#">@note.Title</a></td>
                            <td>@note.Category.Name</td>
                            <td>@note.ReferenceData.Value</td>
                            @if (note.ReferenceData.Value == "5")
                            {
                                <td><a href="#"><img src="../images/Dashboard/edit.png"></a><a href="#"><img src="../images/delete.png"></a></td>
                            }
                            else
                            {
                                <td><a href="#"><img src="../images/Dashboard/eye.png"></a></td>
                            }

                        </tr>
                    }
                </table>
                @Html.PagedListPager(Model.Inprogressnotes, page2 => Url.Action("Dashboard", new { page2 }),
               new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = false, ClassToApplyToFirstListItemInPager = null, ClassToApplyToLastListItemInPager = null })
            </div>
        </div>
    </div>

</section>


<section id="published-notes">
    <div class="content-box-md">
        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-12 col-12">
                    <h3>Published Notes</h3>
                </div>
                <div class="col-md-7 col-sm-12 col-12">
                    <form class="sb">

                        <div class="form-group has-search">
                            <span class="fa fa-search form-control-feedback"></span>
                            <input class="form-control" type="text" placeholder="Search notes here.." aria-label="Search">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-secondary">Search</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ADDED DATE</th>
                            <th scope="col">TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">SELL TYPE</th>
                            <th scope="col">PRICE</th>
                            <th scope="col">ACTION</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Publishednotes)
                    {
                        <tr>

                            <td>@item.PublishedDate</td>
                            <td><a href="#">@item.Title</a></td>
                            <td>@item.Category.Name</td>
                            <td>@(item.IsPaid?"Paid":"False")</td>
                            <td>$@item.Price</td>
                            <td><a href="#"><img src="../images/Dashboard/eye.png"></a></td>
                        </tr>
                    }


                </table>
                @Html.PagedListPager(Model.Publishednotes, page1 => Url.Action("Dashboard", new { page1 }),
               new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = false, ClassToApplyToFirstListItemInPager = null, ClassToApplyToLastListItemInPager = null })
            </div>
        </div>
    </div>

</section>




