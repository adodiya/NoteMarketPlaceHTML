@using PagedList.Mvc;
@using PagedList;
@model IPagedList<NotesMarketPlace.Models.Note>

@{
    ViewBag.Title = "MyRejectedNotes";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section id="my-rejected-notes">
    <div class="content-box-md">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3>My Rejected Notes</h3>
                </div>
                <div class="col-md-8">
                    <form class="form-inline">

                        <div class="form-group has-search">
                            <span class="fa fa-search form-control-feedback"></span>
                            <input class="form-control" type="text" placeholder="Search notes here.." aria-label="Search">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-secondary">Search</button>
                           
                        </div>
                    </form>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">SR NO.</th>
                            <th scope="col">NOTE TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">REMARKS</th>
                            <th scope="col">CLONE</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    @foreach(var item in Model) {
                    <tr>

                        <td>2</td>
                        <td><a href="#">@item.Title</a></td>
                        <td>@item.Category.Name</td>
                        <td>@item.AdminRemarks</td>
                        <td><a href="#">Clone</a></td>
                        <td>
                            <span class="dropdown">
                                <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" @Url.Action("Download",new { id=item.ID})>Download</a>

                                </div>
                            </span>
                        </td>
                    </tr>

                    }

                </table>
            </div>
        </div>
    </div>

</section>
