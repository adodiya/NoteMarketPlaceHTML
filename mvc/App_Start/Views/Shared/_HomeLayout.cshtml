<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NotesMarketPlace</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/custom/Site.css")
    @Styles.Render("~/Content/custom/responsive.css")
    @Scripts.Render("~/bundles/modernizr")




</head>
<body data-spy="scroll" data-target=".navbar" data-offset="65" id="home-page">
    <header>
        <nav class="fixed-top navbar navbar-expand-md" id="home">
            <div class="container-fluid" id="header-logo">
                <span id="mobile-nav-open-btn">&#9776;</span>
                <a class="navbar-brand smooth-scroll" @Url.Action("Index", "Home")>

                    <img src="~/images/top-logo.png">
                </a>
            </div>
            <div class="container">
                <div class="collapse navbar-collapse">
                    <ul class="nav ml-auto" id="header-link">
                        <li class="nav-item"> @Html.ActionLink("Search Notes", "SearchNotes", "Home", null, new { @class = "nav-link smooth-scroll" }) </li>
                        <li class="nav-item">@Html.ActionLink("Sell Your Notes", "SellYourNotes", "Home", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item"><button type="button" class="btn btn-light smooth-scroll navbar-login-button" onclick="window.location='@Url.Action("Login", "Home")'">Login</button></li>
                    </ul>
                </div>
            </div>
            <div id="mobile-nav">
                <span id="mobile-nav-close-btn">&times;</span>
                <div id="mobile-nav-content">
                    <ul class="nav navbar-nav">
                        <li class="nav-item"> @Html.ActionLink("Search Notes", "SearchNotes", "Home", null, new { @class = "nav-link smooth-scroll" }) </li>
                        <li class="nav-item">@Html.ActionLink("Sell Your Notes", "SellYourNotes", "Home", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item"><button type="button" class="btn btn-light smooth-scroll navbar-login-button" onclick="window.location='@Url.Action("Login", "Home")'">Login</button></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <!-- Footer Begins-->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-6 col-sm-7">
                    <p>Copywriter&copy; TatvaSoft All Rights Reserved by</p>
                </div>
                <div class="col-md-4 col-6 col-sm-5 text-right">
                    <ul class="social-list list-inline ">
                        <li class="list-inline-item text-center"><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li class="list-inline-item text-center"><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li class="list-inline-item text-center"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>

        </div>
    </footer>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
