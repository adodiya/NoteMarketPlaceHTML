@using NotesMarketPlace.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{
        ViewBag.Title = "NotesMarketPlace";
        NotesMarketEntities2 db = new NotesMarketEntities2();
        int id = (int)Session["UserID"];
        var obj = db.UserProfiles.Where(model => model.UserID.Equals(id)).FirstOrDefault();
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/custom/Site.css")
    @Styles.Render("~/Content/custom/responsive.css")
    @Scripts.Render("~/bundles/modernizr")

<link href="~/Content/PagedList.css" rel="stylesheet" />


</head>
<body>

    <header>
        <nav class="fixed-top navbar navbar2 navbar-expand-md">
            <div class="container-fluid" id="header-logo">
                <span id="mobile-nav-open-btn">&#9776;</span>
                <a class="navbar-brand smooth-scroll" href="index.html">

                    <img src="~/images/top-logo.png">
                </a>
            </div>
            <div class="container">
                <div class="collapse navbar-collapse">
                    <ul class="nav ml-auto" id="header-link">
                        <li class="nav-item"> @Html.ActionLink("Search Notes", "SearchNotes", "User", null, new { @class = "nav-link smooth-scroll" }) </li>
                        <li class="nav-item">@Html.ActionLink("Sell Your Notes", "Dashboard", "User", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("Buyer Requests", "BuyerRequest", "User", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "User", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "User", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link smooth-scroll dropdown-toggle" role="button" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @if (obj == null || obj.ProfilePic == null)
                                    {<img src="~/ProfileImage/Default.jpg" class="rounded-circle"> }
                                    else
                                    {<img src="@Url.Content(obj.ProfilePic)" class="rounded-circle">}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    @Html.ActionLink("MyProfile", "MyProfile", "User", new { @class = "dropdown-item" })
                                    @Html.ActionLink("My Downloads", "MyDownloads", "User", new { @class = "dropdown-item" })
                                    @Html.ActionLink("My Sold Notes", "MySoldNotes", "User", new { @class = "dropdown-item" })
                                    @Html.ActionLink("My Rejected Notes", "MyRejectedNotes", "User", new { @class = "dropdown-item" })
                                    @Html.ActionLink("Change Password", "ChangePassword", "User", new { @class = "dropdown-item" })
                                    <a class="dropdown-item" href="#" role="button">LOGOUT</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item"><button type="button" class="btn btn-light smooth-scroll" onclick="window.location='@Url.Action("LogOut", "User")'">Logout</button></li>
                    </ul>
                </div>
            </div>
            <div id="mobile-nav">
                <span id="mobile-nav-close-btn">&times;</span>
                <div id="mobile-nav-content">
                    <ul class="nav navbar-nav">
                        <li class="nav-item"> @Html.ActionLink("Search Notes", "SearchNotes", "User", null, new { @class = "nav-link smooth-scroll" }) </li>
                        <li class="nav-item">@Html.ActionLink("Sell Your Notes", "Dashboard", "User", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("Buyer Requests", "BuyerRequest", "User", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "User", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "User", null, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link smooth-scroll dropdown-toggle" role="button" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @if (obj == null || obj.ProfilePic == null)
                                    {<img src="~/ProfileImage/Default.jpg" class="rounded-circle"> }
                                    else
                                    {<img src="@Url.Content(obj.ProfilePic)" class="rounded-circle">}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    @Html.ActionLink("MyProfile", "MyProfile", "User", new { @class = "dropdown-item" })
                                    @Html.ActionLink("My Downloads", "MyDownloads", "User", new { @class = "dropdown-item" })
                                    @Html.ActionLink("My Sold Notes", "MySoldNotes", "User", new { @class = "dropdown-item" })
                                    @Html.ActionLink("My Rejected Notes", "MyRejectedNotes", "User", new { @class = "dropdown-item" })
                                    @Html.ActionLink("Change Password", "ChangePassword", "User", new { @class = "dropdown-item" })
                                    <a class="dropdown-item" href="#" role="button">LOGOUT</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item"><button type="button" class="btn btn-light smooth-scroll" onclick="window.location='@Url.Action("LogOut", "User")'">Logout</button></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <!-- Footer Begins-->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-6 col-sm-7">
                    <p>Copywriter&copy; TatvaSoft All Rights Reserved by</p>
                </div>
                <div class="col-md-4 col-6 col-sm-5 text-right">
                    <ul class="social-list list-inline ">
                        <li class="list-inline-item text-center"><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li class="list-inline-item text-center"><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li class="list-inline-item text-center"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>

        </div>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")


    @RenderSection("scripts", required: false)
</body>
</html>
